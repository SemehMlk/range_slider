import org.mapstruct.Mapper;
import org.mapstruct.Mapping;
import org.mapstruct.factory.Mappers;

@Mapper(componentModel = "spring")
public interface KemmStreamMapper {

    KemmStreamMapper INSTANCE = Mappers.getMapper(KemmStreamMapper.class);

    @Mapping(source = "kemmMqManagerSource.channel", target = "technicalParameters.channel")
    @Mapping(source = "kemmMqManagerSource.host", target = "technicalParameters.host")
    @Mapping(source = "kemmMqManagerSource.mqUser", target = "technicalParameters.mqUser")
    @Mapping(source = "kemmMqManagerSource.mqPassword", target = "technicalParameters.mqPassword")
    @Mapping(source = "kemmMqManagerSource.port", target = "technicalParameters.port")
    KemmStreamDto toDto(KemmStream kemmStream);

    List<KemmStreamDto> toDtoList(List<KemmStream> kemmStreams);
}
