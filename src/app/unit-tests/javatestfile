function formatDateToISO(date: Date): string {
  // Fixer l'heure à minuit pour éviter tout décalage
  const correctedDate = new Date(Date.UTC(
    date.getUTCFullYear(),
    date.getUTCMonth(),
    date.getUTCDate(),
    date.getUTCHours(),
    date.getUTCMinutes(),
    date.getUTCSeconds(),
    date.getUTCMilliseconds()
  ));

  return correctedDate.toISOString();
}
