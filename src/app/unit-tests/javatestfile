    @Mapping(source = "creationDate", target = "creationDate", qualifiedByName = "formatDateTime")
    @Mapping(source = "updateDate", target = "updateDate", qualifiedByName = "formatDateTime")
    KemmStreamDto toDto(KemmStream stream);

    @Named("formatDateTime")
    default String formatDateTime(OffsetDateTime dateTime) {
        return dateTime != null ? dateTime.format(DateTimeFormatter.ISO_OFFSET_DATE_TIME) : null;
    }
