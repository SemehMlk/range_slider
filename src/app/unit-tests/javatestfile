import java.util.List;

public class TestUtils {

    public static ApiSearchCriteria createInOptionsCriteria(String field, List<String> options) {
        ApiSearchCriteria criteria = new ApiSearchCriteria();
        criteria.setField(field);
        criteria.setFieldType("ENUM");
        criteria.setCriteriaType("IN_OPTIONS");
        criteria.setOptionsType(field.toUpperCase());
        criteria.setSearchField(new SearchField().fieldType("ENUM").field(field.toUpperCase()).options(options));
        return criteria;
    }

    public static ApiSearchCriteria createDateTimeRangeCriteria(String field, String minDate, String maxDate) {
        ApiSearchCriteria criteria = new ApiSearchCriteria();
        criteria.setField(field);
        criteria.setFieldType("DATETIME");
        criteria.setCriteriaType("DATE_TIME_RANGE");
        criteria.setSearchField(new SearchField().fieldType("DATETIME").field(field.toUpperCase()));
        criteria.setMinDate(minDate);
        criteria.setMaxDate(maxDate);
        return criteria;
    }

    public static ApiSearchCriteria createContainsCriteria(String field, String searchText) {
        ApiSearchCriteria criteria = new ApiSearchCriteria();
        criteria.setField(field);
        criteria.setFieldType("TEXT");
        criteria.setCriteriaType("CONTAINS");
        criteria.setSearchField(new SearchField().fieldType("TEXT").field(field.toUpperCase()));
        criteria.setSearchText(searchText);
        return criteria;
    }

    // Ajoutez d'autres méthodes utilitaires pour d'autres types de critères si nécessaire
}
