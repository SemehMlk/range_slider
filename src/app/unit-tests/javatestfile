          type: string
        mqUser:
          type: string
        mqPassword:
          type: string
        port:
          type: integer
          format: int32

    KemmMqStream:
      type: object
      properties:
        id:
          type: integer
          format: int64
        upStreamQueue:
          type: string
        downStreamQueue:
          type: string
        replyToDownStreamQueue:
          type: string
        kemmMqManager:
          $ref: '#/components/schemas/KemmMqManager'

    KemmStream:
      type: object
      properties:
        id:
          type: integer
          format: int64
        alias:
          type: string
        type:
          type: string
        description:
          type: string
        status:
          type: string
        inputMessageType:
          type: string
        creationDate:
          type: string
          format: date-time
        mqStreamDetails:
          $ref: '#/components/schemas/KemmMqStream'

    CreateMqStreamRequest:
      type: object
      properties:
        alias:
          type: string
