import org.junit.jupiter.params.ParameterizedTest;
import org.junit.jupiter.params.provider.Arguments;
import org.junit.jupiter.params.provider.MethodSource;

import java.util.stream.Stream;

import static org.assertj.core.api.Assertions.assertThat;

public class ApiFieldMapperTest {

    @ParameterizedTest
    @MethodSource("provideFieldEnums")
    public void testGetColumnName(SearchableFieldDto.FieldEnum fieldEnum, String expectedColumnName) {
        String columnName = ApiFieldMapper.getColumnName(fieldEnum);
        assertThat(columnName).isEqualTo(expectedColumnName);
    }

    private static Stream<Arguments> provideFieldEnums() {
        return Stream.of(
            Arguments.of(SearchableFieldDto.FieldEnum.ID, "id"),
            Arguments.of(SearchableFieldDto.FieldEnum.INPUT_FORMAT, "inputMessageFormat"),
            Arguments.of(SearchableFieldDto.FieldEnum.INPUT_TYPE, "inputMessageType"),
            Arguments.of(SearchableFieldDto.FieldEnum.OUTPUT_TYPE, "outputMessageType"),
            Arguments.of(SearchableFieldDto.FieldEnum.DIRECTION, "direction"),
            Arguments.of(SearchableFieldDto.FieldEnum.TRANSLATION_STATUS, "translationStatus"),
            Arguments.of(SearchableFieldDto.FieldEnum.GLOBAL_STATUS, "globalStatus")
        );
    }
}
