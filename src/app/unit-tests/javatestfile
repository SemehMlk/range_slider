import { SnackBarComponent } from './snack-bar.component'; // Adjust the import path as needed

describe('SnackBarComponent', () => {
  let component: SnackBarComponent;

  beforeEach(() => {
    // Initialize your component with any required dependencies
    component = new SnackBarComponent({ message: null });
  });

  describe('isArrayOfErrors', () => {
    it('should return true if data.message is an array', () => {
      component['data'] = { message: ['error1', 'error2'] }; // Set message as an array
      expect(component.isArrayOfErrors).toBe(true);
    });

    it('should return false if data.message is not an array', () => {
      component['data'] = { message: 'This is an error message' }; // Set message as a string
      expect(component.isArrayOfErrors).toBe(false);
    });

    it('should return false if data.message is null or undefined', () => {
      component['data'] = { message: null };
      expect(component.isArrayOfErrors).toBe(false);
    });
  });

  describe('errorMessage', () => {
    it('should return the message as a string', () => {
      const message = 'This is an error message';
      component['data'] = { message };
      expect(component.errorMessage).toBe(message);
    });

    it('should return an empty string if data.message is not set', () => {
      component['data'] = { message: null };
      expect(component.errorMessage).toBe('');
    });
  });
});
