function formatDateToISO(date: Date): string {
  // Créer une date en utilisant l'heure locale
  const year = date.getFullYear();
  const month = date.getMonth();
  const day = date.getDate();

  // Remettre à zéro l'heure, les minutes, les secondes et les millisecondes pour éviter tout décalage
  const correctedDate = new Date(Date.UTC(year, month, day, date.getHours(), date.getMinutes(), date.getSeconds(), date.getMilliseconds()));

  return correctedDate.toISOString();
}
