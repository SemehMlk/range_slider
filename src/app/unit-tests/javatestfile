private List<ErrorObject> validateRequest(Integer pagenumber, Integer pagesize, String sortBy, String order, ApiSearchRequestDto apiSearchRequest) {
        List<ErrorObject> errors = new ArrayList<>();
        
        // Example validation checks
        if (pagenumber == null || pagenumber < 0) {
            ErrorObject error = new ErrorObject();
            error.setCode("INVALID_PAGE_NUMBER");
            error.setMessage("Page number must be non-negative.");
            error.setParameters(List.of(pagenumber != null ? pagenumber.toString() : "null"));
            errors.add(error);
        }

        if (pagesize == null || pagesize <= 0) {
            ErrorObject error = new ErrorObject();
            error.setCode("INVALID_PAGE_SIZE");
            error.setMessage("Page size must be greater than zero.");
            error.setParameters(List.of(pagesize != null ? pagesize.toString() : "null"));
            errors.add(error);
        }

        // Add more validation checks as necessary

        return errors;
    }
