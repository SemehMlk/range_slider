import { Component } from '@angular/core';
import * as Papa from 'papaparse';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {

  jsonData: any[] = [];

  // Cette méthode est déclenchée lorsque l'utilisateur sélectionne un fichier
  onFileSelected(event: any): void {
    const file: File = event.target.files[0];

    if (file) {
      // Appeler la fonction pour traiter le fichier CSV
      this.readCsvFile(file);
    }
  }

  // Lecture et conversion du CSV en JSON
  readCsvFile(file: File): void {
    const reader = new FileReader();
    reader.onload = () => {
      const csvData = reader.result;

      // Utilisation de PapaParse pour parser le CSV
      Papa.parse(csvData as string, {
        header: true, // Convertir la première ligne en propriétés d'objet
        skipEmptyLines: true,
        complete: (result) => {
          this.jsonData = result.data;
          console.log(this.jsonData); // Afficher les données JSON
        }
      });
    };

    reader.readAsText(file);
  }
}
