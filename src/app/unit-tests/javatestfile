@use '@angular/material' as mat;

$custom-primary: mat.define-palette(mat.$green-palette);  // Palette principale en vert
$custom-accent: mat.define-palette(mat.$pink-palette);
$custom-warn: mat.define-palette(mat.$red-palette);

$custom-theme: mat.define-light-theme((
  color: (
    primary: $custom-primary,
    accent: $custom-accent,
    warn: $custom-warn,
  ),
));

.custom-select-theme {
  @include mat.select-theme($custom-theme);

  // Personnaliser l'icône check
  .mat-select-panel .mat-option.mat-selected .mat-pseudo-checkbox-checked,
  .mat-select-panel .mat-option.mat-selected .mat-pseudo-checkbox {
    background-color: mat.get-color-from-palette($custom-primary) !important;  // Appliquer la couleur primaire personnalisée
  }
}

.custom-datepicker-theme {
  @include mat.datepicker-theme($custom-theme);

  // Personnaliser la couleur de fond des dates sélectionnées
  .mat-calendar-body-selected, .mat-calendar-body-range-start, .mat-calendar-body-range-end {
    background-color: mat.get-color-from-palette($custom-primary) !important;  // Fond vert pour la date sélectionnée
    color: mat.get-contrast-color-from-palette($custom-primary) !important;  // Contraste du texte
  }

  // Pour les plages de dates (range selection)
  .mat-calendar-body-in-range {
    background-color: mat.get-color-from-palette($custom-primary, 0.5) !important;  // Fond semi-transparent pour les dates dans la plage
  }
}

