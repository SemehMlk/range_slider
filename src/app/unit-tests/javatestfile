        - channel
        - host
        - port

    StreamList:
      type: array
      items:
        $ref: '#/components/schemas/KemmStream'









openapi: 3.0.0
info:
  title: Stream API
  description: API for creating and listing streams
  version: 1.0.0
paths:
  /streams:
    get:
      summary: Get a list of all streams with details
      operationId: listStreams
      responses:
        '200':
          description: List of streams
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StreamList'
        '500':
          description: Server error

  /streams/mq:
    post:
      summary: Create a new MQ stream
      operationId: createMqStream
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/CreateMqStreamRequest'
      responses:
        '201':
          description: Stream created successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/KemmStream'
        '400':
          description: Invalid input
        '500':
          description: Server error
