{
    headerName: "Date Column",
    field: "dateField",
    filter: "agDateColumnFilter",
    filterParams: {
        comparator: (filterDate, cellValue) => {
            // Simplement retourner 0 pour forcer l'interface à ne pas filtrer côté frontend
            return 0;
        },
        // Désactiver les filtres "inRange" (between) côté frontend en les laissant vides
        inRangeInclusive: true, // Juste pour laisser l'interface disponible
    },
    onFilterChanged: params => {
        // Capture l'état du filtre et envoyer une requête au backend
        const filterModel = params.api.getFilterModel();
        fetchFilteredDataFromBackend(filterModel).then(filteredData => {
            params.api.setRowData(filteredData); // Afficher les données du backend
        });
    },
    // autres configurations...
}
