private String formatFieldError(FieldError fieldError) {
    String fieldName = fieldError.getField();
    String objectName = fieldError.getObjectName(); // Le nom du mod√®le, par exemple "MqStreamDTO"

    // Retirer l'indice du tableau
    if (fieldName.contains("[") && fieldName.contains("]")) {
        fieldName = fieldName.replaceAll("\\[\\d+\\]", "");
    }

    return String.format("In '%s', field '%s' %s", objectName, fieldName, fieldError.getDefaultMessage());
}
