import com.fasterxml.jackson.databind.ObjectMapper;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.List;

public class TsnPayloadInfoProcessor {

    public static TsnPayloadInfo processPayload(String json) {
        ObjectMapper objectMapper = new ObjectMapper();
        try {
            // Désérialiser le JSON en objet TsnPayloadInfo
            TsnPayloadInfo tsnPayloadInfo = objectMapper.readValue(json, TsnPayloadInfo.class);

            // Mettre à jour les propriétés selon le type
            if (tsnPayloadInfo.getProperties() != null) {
                for (TsnPayloadInfoProperty property : tsnPayloadInfo.getProperties()) {
                    if ("localDtm".equalsIgnoreCase(property.getType())) {
                        String currentDateTime = LocalDateTime.now()
                                .format(DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss"));
                        property.setValue(currentDateTime);
                    }
                }
            }
            return tsnPayloadInfo;
        } catch (Exception e) {
            e.printStackTrace();
            return null;
        }
    }

    public static void main(String[] args) {
        // Exemple JSON
        String json = "{ \"request\": { \"name\": \"ExampleName\" }, \"properties\": [ { \"type\": \"localDtm\", \"value\": \"\" }, { \"type\": \"Type2\", \"value\": \"Value2\" } ] }";

        // Appel de la fonction et affichage du résultat
        TsnPayloadInfo result = processPayload(json);
        System.out.println("TsnPayloadInfo mis à jour : " + result);
    }
}
