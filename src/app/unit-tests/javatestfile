describe('onFileSelect', () => {
  it('should call readCsvFile if a file is selected', () => {
    const mockFile = new File(['test'], 'test.csv', { type: 'text/csv' });
    const mockEvent = {
      target: {
        files: [mockFile],
      },
    };

    // Espionner la méthode readCsvFile pour vérifier son appel
    jest.spyOn(component, 'readCsvFile');

    // Appelez la méthode onFileSelect avec l'événement simulé
    component.onFileSelect(mockEvent as any);

    // Assurez-vous que readCsvFile a été appelée avec le bon fichier
    expect(component.readCsvFile).toHaveBeenCalledWith(mockFile);
  });
});
