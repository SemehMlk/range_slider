@use '@angular/material' as mat;

// Définir une palette de couleurs primaires personnalisée
$custom-primary: mat.define-palette(mat.$indigo-palette);

// Définir une palette de couleurs d'accent personnalisée
$custom-accent: mat.define-palette(mat.$pink-palette, A200, A100, A400);

// Définir une palette de couleurs d'alerte (warn) personnalisée
$custom-warn: mat.define-palette(mat.$red-palette);

// Créer un thème en utilisant les palettes personnalisées
$custom-theme: mat.define-light-theme((
  color: (
    primary: $custom-primary,
    accent: $custom-accent,
    warn: $custom-warn,
  )
));

.custom-theme {
  @include mat.all-component-themes($custom-theme);
}

.custom-theme {
  @include mat.button-theme($custom-theme);
  @include mat.input-theme($custom-theme);
  @include mat.select-theme($custom-theme);
  @include mat.datepicker-theme($custom-theme);
}
