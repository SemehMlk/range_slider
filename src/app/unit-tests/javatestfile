import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.MethodArgumentNotValidException;
import org.springframework.web.bind.MissingServletRequestParameterException;
import org.springframework.web.context.request.WebRequest;

import java.util.List;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

@SpringBootTest
public class MessageServiceTest {

    private MessageService messageService;

    @BeforeEach
    public void setUp() {
        messageService = new MessageService();
    }

    @Test
    public void testGetMessagesInvalidPageNumber() {
        Integer invalidPageNumber = -1; // Invalid page number
        Integer validPageSize = 10; // Valid page size

        Exception exception = assertThrows(MethodArgumentNotValidException.class, () -> {
            messageService.getMessages(invalidPageNumber, validPageSize);
        });

        String expectedMessage = "Page number should not be less than 0";
        String actualMessage = exception.getMessage();

        assertEquals(expectedMessage, actualMessage);
    }

    @Test
    public void testGetMessagesInvalidPageSize() {
        Integer validPageNumber = 0; // Valid page number
        Integer invalidPageSize = 0; // Invalid page size

        Exception exception = assertThrows(MethodArgumentNotValidException.class, () -> {
            messageService.getMessages(validPageNumber, invalidPageSize);
        });

        String expectedMessage = "Page size should not be less than 1";
        String actualMessage = exception.getMessage();

        assertEquals(expectedMessage, actualMessage);
    }
}
